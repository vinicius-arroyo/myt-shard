DEFNAME=Skill_Fishing
KEY=Fishing
TITLE=Fisherman
PROMPT_MSG=Onde voce quer pescar?
FLAGS=skf_gather
DELAY=8.0
STAT_STR=40
STAT_DEX=40
STAT_INT=30
BONUS_STR=10
BONUS_DEX=90
BONUS_INT=0
BONUS_STATS=25
