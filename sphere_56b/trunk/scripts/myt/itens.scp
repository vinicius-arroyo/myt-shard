[TYPEDEF t_wheting_stone]
//Pedra de amolar lâminas
ON=@DClick
src.sysmessageyellow Selecione a arma:
TARGET
return 1

ON=@Targon_Item
if (<src.targ.type>!=t_weapon_sword) && (<src.targ.type>!=t_weapon_fence)
    src.sysmessagered Isso nao eh uma arma com lamina.
elif (<src.targ.topobj>!=<src>)
    src.sysmessagered A arma deve estar em seu poder.
elif (<src.targ.IsEvent.t_attune_weapon>)
    src.sysmessagered Essa arma ja foi amolada.
else
    src.emoteyellow amolando <src.targ.name>
    src.f_wheat_weapon <src.targ>,<uid>
endif
return 1

[FUNCTION f_wheat_weapon]
//Tenta amolar a arma <argn1> usando a pedra <argn2>
ref1=<argn1>
obj=<findid.i_faz_item>
obj.cleartags
obj.tag.abort=1
obj.tag.item=1
obj.tag.weapon=<argn1>
obj.tag.stone=<argn2>
obj.tag.skill=ArmsLore
obj.tag.dif=<eval <serv.itemdef.<ref1.defname>.skillmake.0.val>/10>
obj.tag.delay=15
obj.tag.f_step=f_wheat_weapon_step
obj.tag.f_done=f_wheat_weapon_done
fazitem

[FUNCTION f_wheat_weapon_step]
DOSWITCH <cTAG0.step>
 sfx 0524
 emoteyellow amolando <uid.<findid.i_faz_item.tag0.weapon>.name>
 local.0
 sfx 0247
ENDDO
cTAG0.step += 1
if (<cTAG0.step> > 5)
    cTAG.step=0
endif
anim 6

[FUNCTION f_wheat_weapon_done]
ref1=<findid.i_faz_item.tag0.weapon>
ref2=<findid.i_faz_item.tag0.stone>

if (<ref1.topobj>!=<uid>) || (<ref2.topobj>!=<uid>)
    sysmessagered Andaram te roubando...
    confuso
    return 1
endif

if (<argn1>)    //Passou no teste de Armslore. Reparar.
     //Determina quantos HITS da arma vai devolver.
    local.percent=<BETWEEN 5,50,<ArmsLore>,100.0>
    local.hits=<MULDIV <ref1.MAXHITS>,5,100>
    local.oHits=<ref1.hits>
    if (<eval <local.hits>+<ref1.HITS>> > <ref1.MAXHITS>)
        ref1.HITS=<ref1.MAXHITS>
    else
        ref1.HITS += <local.hits>
    endif
    if (<local.oHits> > <ref1.HITS>)
        src.sysmessageyellow Para receber o tratamento sua arma perdeu <eval <local.oHits>-<ref1.hits>> hits.
    else
        src.sysmessagegreen <ref1.name> foi reparada em <eval <ref1.hits>-<local.oHits>> hits!
    endif
    
else
    src.sysmessageyellow Voce nao conseguiu reparar <ref1.name>.
endif

ref1.ATTUNEWEAPON <ref2.more1>,600,100

ref2.decrement

[TYPEDEF t_finding_powd]
//Pó para achar objetos escondidos.
ON=@DClick
src.emoteyellow joga um po
src.sfx 0247
src.BUFFSKILL DetectHidden,<more1>,5
src.timerf 1 dh_search
decrement
return 1

