on=@Equip
attr = 08010

//////////////////////////////////////////////////////

[ITEMDEF i_orc_check]	
id=020a2
type=t_eq_script
weight=0
value=0

On=@timer
if (<link.findlayer.layer_helm.id> != 0141b)								// o layer_helm ta sem o i_head_orc?
	if (!<link.findlayer.layer_helm.id> == 0)									// o layer_helm ta ocupado por um elmo/chapeu qualquer?
		link.unequip <link.findlayer.layer_helm>									// se sim, desequipa o elmo que está na cabeça do orc
	elif (<link.findlayer.layer_helm.id> == 0)									//o layer_helm ta vazio?
		if (!<link.restest 1 i_head_orc>) && (!<link.flags>&statf_dead)				// o orc ta sem nenhum i_head_orc na bag, e não está morto?
			serv.newitem i_head_orc														//cria o item
			new.cont = <link.findlayer.layer_pack>										// joga na pack
		endif
		link.equip <link.findid.i_head_orc>											// equipa
	endif	
	timer = 3																	// ele vai continuar testando enquanto não colocar a cabeça de volta no lugar
else
	if (<link.findlayer.layer_pack.restest 1 i_head_orc>)						// se houve i_head_orc extra na bag
		while (<link.findlayer.layer_pack.findid.i_head_orc>)						// enquanto houverem...
			link.findlayer.layer_pack.findid.i_head_orc.remove							//remove
		endwhile
	endif
	timer = -1																	// para quando conseguir
endif

return 1


