elif (<argo.id>==c_besouro_deserto) || (<argo.id>==c_cao_jathiir)
    if !strmatch(<tag.raca>,anao)
        emotered Caiu do animal
        sysmessageyellow O animal nao te aceita...
        return 1
    endif
//mounts exclusivas de drow    
elif <argo.id>==c_besouro_gigante
