[ITEMDEF i_head_orc]
id=0141b
name=Orc
TYPE=t_armor
VALUE=0
WEIGHT=0

ON=@Create
COLOR=0597
HITPOINTS=9999
attr= attr_static|attr_move_never

on=@UnEquip
