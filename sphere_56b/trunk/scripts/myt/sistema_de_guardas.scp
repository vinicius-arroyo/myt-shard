if (<karma> < 0) || (<NPC>==brain_animal) || (<NPC>==brain_monster) || (<NPC>==brain_dragon) || (<NPC>==brain_berserk)
    return 0
endif

if !<guards_near guard_advice,<argn1>,<argn2>>
