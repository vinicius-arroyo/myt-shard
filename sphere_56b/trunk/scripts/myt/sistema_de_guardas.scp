//*****************************************************************************
// e_InTown
//*****************************************************************************
[EVENTS e_InTown]

ON=@LOGIN
town_enter <region.defname>

//**************************************
ON=@ItemEquip

//se estiver equipando uma arma
if (<act.isweapon>) && (<act.dam.hi> > 10)
    if !<towncache_can <DEF.TOWN_CAN_WARMODE>>
        TRIGGER @CallGuards,<DEF.TAT_AS_ARGN>,<UID>,<DEF.TOWN_CAN_WEAPON>
    endif        
//se estiver equipando um capuz ou elmo    
elif ( (<act.baseid>==i_capuz) || (<act.layer>==layer_helm) ) 
    if !<towncache_can <DEF.TOWN_CAN_HOOD>>
        TRIGGER @CallGuards,<DEF.TAT_AS_ARGN>,<UID>,<DEF.TOWN_CAN_HOOD>
    endif        
endif

//**************************************
ON=@UserWarmode

//se em warmode
if !<argn1>
    if !<towncache_can <DEF.TOWN_CAN_WARMODE>>
        TRIGGER @CallGuards,<DEF.TAT_AS_ARGN>,<UID>,<DEF.TOWN_CAN_WARMODE>
    endif     
endif

//**************************************
ON=@TownSpellSuccess
if !<towncache_can <DEF.TOWN_CAN_MAGIC>>
    TRIGGER @CallGuards,<DEF.TAT_AS_ARGN>,<UID>,<DEF.TOWN_CAN_MAGIC>
endif

//**************************************
on=@TownHit

if (!<IsPlayer>) || (!<src>) || (<src>==<uid>)
    return 0
endif

//testar brain_animal para RESOURCES
//se RESOURCES animais
if (<src.NPC>==brain_animal)
    //e nao tiver permissao
    if !<towncache_can <DEF.TOWN_CAN_RESOURCES>>
        //e nao for pet
        if !(<src.memoryfindtype.memory_ipet>)
//            sysmessageyellow Eh bom voce saber que nao eh permitido cacar aqui.
            TRIGGER @CallGuards,<DEF.TAT_AS_ARGN>,<UID>,<DEF.TOWN_CAN_RESOURCES>
        endif
    endif        

//nao tem permissao para machucar?
elif !<towncache_can <DEF.TOWN_CAN_HARM>> //&& !(<ctag0.town_<region.defname>_flags>&<DEF.TOWN_FLAG_CRIMINAL>)

//    cTAG.town_warn_guards = 1
    
    //Testar se o alvo é guarda
    if <src.IsTEvent.e_town_guard>
        //se ainda nao foi marcado como criminoso
        if !(<ctag0.town_<region.defname>_flags>&<DEF.TOWN_FLAG_CRIMINAL>)
            DORAND 3
                src.SAY Como ousa?
                src.SAY Agora foi de mais!
                src.SAY Tome isto!
            END
            town_setAsCriminal <src.tag.town>
            src.attack <uid>
        endif
    endif
    //testar vendor/player/guard para HARM || Testar se o alvo é player free ||
//    elif (<src.IsTownNPC>) || (<src.IsPlayer>)
    TRIGGER @CallGuards,<DEF.TAT_AS_ARGN>,<UID>,<DEF.TOWN_CAN_HARM>   
    
endif

//**************************************
ON=@CallGuards
if !<guards_near guard_advice,<argn1>,<argn2>>
    cTAG.town_warn_guards = 1
    town_NpcNear town_npc_call_help,<argn1>,<argn2>
endif
