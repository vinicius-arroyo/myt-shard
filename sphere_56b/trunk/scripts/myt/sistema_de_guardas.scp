//*****************************************************************************
// e_town_guard
//*****************************************************************************
[EVENTS e_town_guard]

ON=@Kill
if (<tag0.task>==<DEF.GUARD_TASK_PATROL>)
    guard_StartPatrol
endif
tag.kills = <tag0.kills>+1
//serv.log <name> matou <dtag0.kills>/<eval (<tag0.guard_level>+2)@2> (<dtag0.guard_level>)
if (<tag0.kills> > <eval (<tag0.guard_level>+2)@2>) && (<tag0.guard_level> < 5)
    guard_level <eval <tag0.guard_level>+1>
    //serv.log [NIUVO] <name> eh agora nivel <dtag0.guard_level>
endif

//serv.log I:<NAME> SRC:<SRC.NAME> ACT:<ACT.NAME> ARGO:<argo.name>

if (<act.IsPlayer>)
    //Efetuar prisão?
    if (<serv.area.<tag.town_region>.tag0.prisionTime>)
        DORAND 3
            say Voce esta preso em nome da lei!
            say Voce tem o direito de desmaiar antes de chegar na sua cela.
            say Produza um pouco de mofo para as formigas da sua cela.
        ENDDO
	src.town_GoJailed <uid>
        // act.town_GoJailed <uid> travado para teste rápido
    endif
endif

//**************************************
ON=@HUNGER
IF (<food> < 30)
    local.food=<town_ServantFood>
    IF (!<local.food>)
        IF (<restest 3 i_coin_copper>)
            consume 3 i_coin_copper
            serv.newitem i_carne
            new.amount=<R4,9>
            trysrc <uid> src.bounce <new>
        ELIF (!<food>) && (<tag0.nopay> > 2)
            say Chega disso! Me demito!
            timerf 15 remove
        ENDIF
    ELSE
        argn1=<local.food>
    ENDIF
ENDIF

//**************************************
ON=@NPCLookAtChar

//Lagoso. Cuidado

//somente conitnua se olhar para player
if !<src.IsPlayer>
    return 0
elif <src.IsGM>
    return 0
elif (<src.flags>&080200b) //statf_hidden|statf_insubstantial|statf_invisible|statf_dead|statf_invul    
    return 0
//elif !<CanSeeLos <src>>    
//    return 0
//nao precisa verificar novamente
elif !<src.cTAG0.town_warn_guards>
    return 0
elif <IsEmpty <region.tag.permissions>>    
    return 0
endif

//Somente se ele estiver wandering, goin to, going home, stay ou guard item.
if ((<action> > 064) && (<action> < 069)) || (<action>==06C) || (<action>==06D)
    
    LOCAL.flags=<src.ctag0.town_<tag.town_region>_flags>    

    serv.log [GUARDAS]@NPCLookAtChar suspeito <src.account>
    
    //se estiver marcado para prisao
    if (<LOCAL.flags>&023) //TOWN_FLAG_BANNED|TOWN_FLAG_CRIMINAL|TOWN_FLAG_FORBIDDEN
        //sem capuz
        if <src.isFaceVisible>)
            attack <src>
            if (<local.flags>&020)
               say Intrus<src.sex o/a> <src.tag.raca>! Alarme! Alarme!
            elif (<local.flags>&02)
               say Criminos<src.sex o/a>!
            elif (<local.flags>&01)
               say Hey, <src.tag.name>! Voce esta banid<src.sex o/a> de <region.name>! FORA!
            endif
            return 0
        endif
    endif

    //lutar na cidade
    if !<src.towncache_can <DEF.TOWN_CAN_WARMODE>>
        if (<src.flags>&020)    //statf_war
            guard_advice <src>,<DEF.TOWN_CAN_WARMODE>
            return 0
        endif

        //usando arma com dano alto
        if (<src.weapon.dam.hi> > 10)
            sysmessageyellow Eh bom que voce saiba que nao se pode andar com armas pesadas aqui.
            guard_advice <src>,<DEF.TOWN_CAN_WEAPON>
            return 0
        endif
    endif
    
    //usando capuz
    if !<src.towncache_can <DEF.TOWN_CAN_HOOD>>
        if (!<rec_CanSee <src>>)
            sysmessageyellow Eh bom que voce saiba que nao se pode andar encapuzado aqui.
            guard_advice <src>,<DEF.TOWN_CAN_HOOD>
            return 0
        endif
    endif

    //pode ignora-lo em seguranca
    src.cTAG0.town_warn_guards=0

endif

//**************************************
ON=@Hitting
//Player com capuz?
if (!<rec_CanSee <src>>) && (<src.IsPlayer>)
    if (<src.restest i_capuz>)
        src.capuz
    else
        obj=<src.findlayer.layer_helm>
        if (<obj>)
            obj.p=<src.p>
        endif
    endif

    timerf 1,say Aha! Voce!

    if !(<src.ctag0.town_<tag.town_region>_flags>&TOWN_FLAG_CRIMINAL)
        src.town_setFlags <DEF.TOWN_FLAG_CRIMINAL>,<tag.town_region>
    endif
endif

//**************************************
ON=@DEATH
town_UnRegServant
serv.log [GUARDAS-e_town_guard]@Death  Guarda <name> (<uid>) foi destruido!!!

