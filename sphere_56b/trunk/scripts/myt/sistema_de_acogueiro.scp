on=@click
message <name>
return 1

on=@dclick
target Selecione a carne de porco crua para fazer linguica.
return 1

on=@TARGON_char
  src.sysmessage Selecione uma carne de porco crua para fazer linguica.
return 1

on=@TARGON_ground
  src.sysmessage Selecione uma carne de porco crua para fazer linguica.
return 1

on=@TARGON_ITEM
if (<src.targ.distance> > 1)&&(<topobj.uid> != <src.uid>)
  src.sysmessage Chegue mais perto.
return 1
elif (<src.targ.baseid>==i_ham_raw)
	if (<src.cooking> < 30)
	 src.newitem=i_sausages_raw
	 src.act.amount=1
	 src.act.bounce
	 src.consume 1 i_ham_raw
	 remove
	return 1
	elif (<src.cooking> >= 30)
	 src.newitem=i_sausages_raw
	 src.act.amount=4
	 src.act.bounce
	 src.consume 1 i_ham_raw
	 remove
	return 1
	endif
return 1
endif
return 1


