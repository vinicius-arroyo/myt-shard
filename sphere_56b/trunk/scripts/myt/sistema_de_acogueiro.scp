[function comida]
if (<src.food><=0)
  src.sysmessage Voce esta faminto! coma algo senao vc pode morrer de fome.
return 1
elif (<src.food><=3)
  src.sysmessage Voce esta com muita fome!
return 1
elif (<src.food><=6)
  src.sysmessage Voce esta com fome!
return 1
elif (<src.food><=9)
  src.sysmessage Voce esta com um pouco de fome!
return 1
elif (<src.food><=12)
  src.sysmessage Voce esta bem alimentado!
return 1
elif (<src.food><=14)
  src.sysmessage Voce esta satisfeito(a)!
return 1
elif (<src.food>>=15)
  src.sysmessage Voce esta cheio(a)!
return 1
endif
return 1


