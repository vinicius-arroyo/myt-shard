//*****************************************************************************
// taglist <stringFiltro>
//*****************************************************************************
//Mime da função taglist com opção de filtrar tags iniciadas por <args>
[FUNCTION taglist]
//Para entender essa aqui, olhe a página de CHARS do wiki. Para ver o que é TAGAT.<indice>.KEY / .VAL
local.total=<eval <tagcount>-1>
if (<local.total>==-1)
	//Não tem tag para mostrar. Nem roda pra não mostrar erro na console.
	return 0
endif
if (<argv>)
	if (STRMATCH(<args>,log))
		serv.log <tag.name> (<account>) commands taglist fo self.
	endif
	//Caso estejamos procurando uma TAG cujo nome (KEY) começa com <args>*
	for i <local.total>
		if (STRMATCH(<args>*,<tagat.<local.i>.key>))
			//STRLEN e STRMATCH são duas coisas muito úteis. Estude elas.
			sysmessage <tagat.<local.i>.key>=<tagat.<local.i>.val>
		elif (STRMATCH(<args>,log))
			serv.log tag.<tagat.<local.i>.key>=<tagat.<local.i>.val>
		endif
	endfor
else
	//Caso queremos ver todas as TAGs, sem filtro
	for i <local.total>
		sysmessage <tagat.<local.i>.key>=<tagat.<local.i>.val>
	endfor
endif

[FUNCTION xtaglist]
//Sim! Podemos colocar esse nome na função. Aí a gente muda o comportamento da função para quando tem target.
if !(<argo>)
	//Ainda não deram um target. Chama a função de novo atravez de um target passando o <args> também e depois para a função
	targetf xtaglist <args>
	return 0
endif
local.total=<eval <argo.tagcount>-1>
if (<local.total>==-1)
	//Não tem tag para mostrar. Nem roda pra não mostrar erro na console.
	return 0
endif
if (<argv>)
	if (STRMATCH(<args>,log))
		serv.log <tag.name> (<account>) commands taglist for <argo.uid> (<argo.name>)
	endif
	//Caso estejamos procurando uma TAG cujo nome (KEY) começa com <args>*
	for i <local.total>
		if (STRMATCH(<args>*,<argo.tagat.<local.i>.key>))
			//STRLEN e STRMATCH são duas coisas muito úteis. Estude elas.
			sysmessage <argo.tagat.<local.i>.key>=<argo.tagat.<local.i>.val>
		elif (STRMATCH(<args>,log))
			serv.log tag.<argo.tagat.<local.i>.key>=<argo.tagat.<local.i>.val>
		endif
	endfor
else
	//Caso queremos ver todas as TAGs, sem filtro
	for i <local.total>
		sysmessage <argo.tagat.<local.i>.key>=<argo.tagat.<local.i>.val>
	endfor
endif

