//*****************************************************************************
// t_ore
//*****************************************************************************
[TYPEDEF t_ore]
ON=@DCLICK

//temporário enquanto existirem i_carvao com type t_ore
if (strmatch(<baseid>,i_carvao_mineral))
	return 0
endif

if !(<src.isneartype t_forge 2>)
	src.sysmessageyellow Voce precisa estar proximo de uma forja.
	return 1
endif

if (<amount><10)
	src.sysmessageyellow Voce precisa de pelo menos 10 ores para fazer lingotes.
	return 1
endif

//calcula a quantidade que sera gerada de lingotes
amount=<eval (<amount>*<src.blacksmithing>)/1000>

//deixa o sphere fazer o resto
return 0

//*****************************************************************************
// t_incomplete_forged
//*****************************************************************************
//usado em  pre itens
[TYPEDEF t_incomplete_forged]
ON=@DCLICK
target Selecione a tina de agua:
return 1

ON=@TARGON_ITEM
if (<src.targ.dispid>==i_barrel_water)
	if (<src.targ.distance> > 1)
		src.sysmessage Chegue mais perto.
		return 1
	endif
	
	if !(<more2>)
		src.sysmessagered Item invalido. Reporte.
		return 1
	endif
	
	sfx 054
	src.targ.effect 2,i_fx_smoke,0,15,0
	serv.newitem=<more2>
	new.more1=<more1>
//	src.act.tag.dono=<src.uid>
//	src.tag.furniact=0<src.tag.furniact>+1
	if (<morex>)
		new.amount=<morex>
	endif
	new.bounce
	remove
	return 1
else
	src.sysmessage Voce deve selecionar uma tina de agua.
	return 1
endif
return 1

