//*****************************************************************************
// repairfix ()
//*****************************************************************************
[FUNCTION repairfix]

if ( !<argo> )
	src.sysmessage O que deseja reparar?
	targetf repairfix
	return 1
endif

if (<argo><040000000) 
 src.sysmessage Somente itens podem ser reparados.
 return 1
endif

if !(<restest 5 i_ingot_iron>)
	src.sysmessage Voce precisa de pelo menos 5 lingotes de ferro.
	return 1
endif

if (<ARGO.TOPOBJ.DISTANCE>>=2) || (<SRC.TARG.CanSeeLos>!=1)
	src.sysmessage Esta muito longe.
	return 1
endif

//make sure item is armor/swords etc
if (<argo.type>!=t_weapon_mace_smith) && (<argo.type>!=t_weapon_sword) && (<argo.type>!=t_weapon_fence) && (<argo.type>!=t_armor) && (<argo.type>!=t_weapon_axe) && (<argo.type>!=t_weapon_mace_pick) && (<argo.type>!=t_weapon_mace_sharp) && (<argo.type>!=t_shield)
	src.sysmessage Voce nao pode reparar isto.
	return 1
endif

if (<argo.hits>>=<argo.maxhits>)
	src.sysmessage Nao esta danificado.	
	return 1
endif

LOCAL.tRepair=<eval 6-(<src.blacksmithing>/250)>

//inicia processo de reparo
timerf 1 repair_step <argo>,<LOCAL.tRepair>

//*****************************************************************************
// repair_step ( uid_to_repair, steps_remaining )
//*****************************************************************************
[FUNCTION repair_step]

if ( !<argv[0]> )
	src.sysmessage Erro reparando!!
	return 1
endif

//repete animacao ate terminar
if ( <argv[1]> > 0 )
	src.anim 11
	src.sfx 42

	LOCAL.r=<eval <argv[1]>-1>
	timerf 1 repair_step <argv[0]>,<LOCAL.r>
	return 1
endif

if !(<restest 5 i_ingot_iron>)
	src.sysmessage Voce precisa de pelo menos 5 lingotes de ferro.
	return 1
endif

LOCAL.chance1=<eval rand(1500)>
LOCAL.chance2=<eval rand(1000)>
LOCAL.chance3=<eval rand(500)>

//consome de 1 a 5 lingotes
LOCAL.consume=<eval 5-(<src.blacksmithing>/201)>
src.consume <LOCAL.consume> i_ingot_iron

OBJ=<argv[0]>
if ( <LOCAL.chance1> < <src.blacksmithing> )
	src.sysmessage Reparo finalizado com sucesso.
	OBJ.maxhits=<eval <OBJ.maxhits>-1>
	OBJ.hits=<OBJ.maxhits>
elif ( <LOCAL.chance2> < <src.blacksmithing> )
	src.sysmessage Reparo incompleto.
	OBJ.maxhits=<eval <OBJ.maxhits>-1>
	LOCAL.maxinc=<eval (<OBJ.maxhits>-<OBJ.hits>)-1>
	OBJ.hits=<eval <OBJ.hits>+rand(<LOCAL.maxinc>)>
elif ( <LOCAL.chance3> > <src.blacksmithing> )
	src.sysmessage Reparo falhou e o material foi danificado!!	
	OBJ.maxhits=<eval <OBJ.maxhits>-1>
	LOCAL.maxdec=<eval <OBJ.hits>-1>
	OBJ.hits=<eval <OBJ.hits>-rand(<LOCAL.maxdec>)>
else
	src.sysmessage Voce nao conseguiu reparar.
endif

src.skill_gain skill_blacksmithing

if (<OBJ.maxhits>==0)
	src.sysmessage Este item possui muitos remendos e nao pode ser mais reparado.
	OBJ.remove
endif

return 1

