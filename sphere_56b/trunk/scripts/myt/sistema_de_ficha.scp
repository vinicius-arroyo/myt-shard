    return
elif (!<obj.IsOnline>)
    return
endif
ctag.admin_player=<obj>
DB.QUERY "SELECT count(idEvent) AS cnt FROM eventsLog WHERE char2Acct=<obj.dtag0.idAcct> AND eventType='Jail'"
ctag.admin_jail_h=<MAXIMUM <DB.ROW.0.cnt>,1>
