FORCHARS <LOCAL.r>
 IF (!<IsMyEnemy <OBJ>>) && ((<IsMyMaster <OBJ>>) || (<IsPlayer>)) && !(<RESTEST 4 i_mry_COMBAT_MODS>)
  EFFECT_BARDSONG_VALOR <LOCAL.timer>,<LOCAL.modar>,<LOCAL.moddam>
 ENDIF
