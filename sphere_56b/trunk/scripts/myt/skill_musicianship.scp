tag.bard.action=BARD_ACTION_SONG
tag.bard.item=<tag0.bard.page>
sysmessagegreen Cancao bardica: <DEF.BARD_P<hval <tag0.bard.page>>_NAME>
DIALOG d_book_bard 1

ON=31
// song page -
f_book_bard_page_previous

ON=32
// Song page +
f_book_bard_page_next

