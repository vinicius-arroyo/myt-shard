    local.s = 1
endif

 IF ((<IsMyEnemy <OBJ>>) || (!<IsPlayer>)) && (!<IsMyMaster <OBJ>>) && (<CanSeeLos <OBJ>>) && (<UID> != <obj>) //|| (!<IsPlayer>))
 EFFECT_BARDSONG_LULABY <OBJ> <local.f> <local.s>
 ENDIF
ENDFOR

[FUNCTION EFFECT_BARDSONG_LULABY]
obj=<argn1>
obj.say Eu sou obj
say Eu sou ME
IF ((<R<INT>> > <obj.int>) || (<BELLTEST <obj.Musicianship>,120.0>)) && (<R15>)
