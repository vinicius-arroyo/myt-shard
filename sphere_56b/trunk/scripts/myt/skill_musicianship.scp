[TYPEDEF t_musical]
ON=@DCLICK
//Checks de CAN
IF (<topobj>!=<src>)
    IF (<cont>)
        src.sysmessageyellow Nao da para usar <name> aonde esta. Voce deve ter ele em sua mochila.
        return 1
    endif
else
    IF <src.findid.i_meditation>
        src.sysmessageyellow Voce esta recuperando inspiracao...
        return 1
    ELIF (<src.action> != -1) || (<timer> > 0)
        src.sysmessageyellow Aguarde ate estar desocupado para fazer isso.
        return 1
    endif
endif

    IF (<HITS>>0)
        HITS=(<HITS>-1)
        update
        return 0
    else
        src.sysmessagered O instrumento precisa de reparos.
        return 1
    endif

