 return 1
endif
LOCAL.r=<BETWEEN 1,18,<musicianship>,90.0>
LOCAL.moddam=<BETWEEN 0,4,<musicianship>,120.0>
LOCAL.modar=<BETWEEN 0,4,<musicianship>,120.0>
