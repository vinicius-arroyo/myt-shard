[ITEMDEF i_fire_storm]
ID=i_fx_explode
NAME=a Fire Storm
TYPE=t_spell
CATEGORY=TFL Additions
SUBSECTION=Animations
DESCRIPTION=Fire Storm Piece
ON=@Create
   ATTR=attr_magic|attr_move_never
   MORE=0
   MOREP=42,55,99
   TIMER=1
ON=@DClick
   MORE += 1
   IF (<MORE> > 15)
      REMOVE
      RETURN 1
   ENDIF
   MOREP=<LINK.P>
   TAG.NEG=RAND(2)
   TAG.TX=RAND(6)
   IF (<TAG0.NEG> == 1)
      MOREX=<MOREX> - <TAG0.TX>
   ELSE
      MOREX=<MOREX> + <TAG0.TX>
   ENDIF
   TAG.NEG=RAND(2)
   TAG.TY=RAND(6)
   IF (<TAG0.NEG> == 1)
      MOREY=<MOREY> - <TAG0.TY>
   ELSE
      MOREY=<MOREY> + <TAG0.TY>
   ENDIF
   TAG.NEG=
   TAG.TX=
   TAG.TY=
   ATTR=attr_move_never|attr_invis|attr_magic
   P=<MOREP>
   ATTR=attr_magic|attr_move_never
   MOREP=42,55,99
   TIMER=1
   RETURN 1

