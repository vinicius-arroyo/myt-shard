[ITEMDEF i_egg_dragon]
ID=i_fruit_coconut
NAME=Dragons Egg
VALUE=5000
CATEGORY=Custom Items
SUBSECTION=Dragons Egg
DESCRIPTION=Dragons Egg
ON=@Create
   COLOR={ 0000 1 0033 1 0038 1 005d 1 0091 1 0175 1 0371 1 0455 1 07fff 1 }
   ATTR=attr_identified
   MORE=0
ON=@Timer
   IF (<MORE>==1)
      MORE2=2
      SERV.NEWITEM=i_dragon_spawn
      LINK.ACT.P=<LINK.P>
      REMOVE
   ENDIF
   RETURN 1
ON=@DClick
   //timer not executing in packs or containers, so do this for now if in someones pack
   IF (<MORE>==1)
      IF (<TIMER>>5800)
         SRC.MESSAGE The egg seems soft and somewhat velvety to thine touch.
      ELIF (<TIMER>>3600)
         SRC.MESSAGE The egg seems to be getting hard and the velvet has fallen off.
      ELIF (<TIMER>>1800)
         SRC.MESSAGE The egg is very hard, it may hatch soon if you don't sell it quickly.
      ELIF (<TIMER>>20)
         SRC.MESSAGE You swear you can feel movement inside the egg...
      ELSE
         SRC.MESSAGE OH NO! as you pick up the egg it cracks and begings hatching!!!
         SERV.NEWITEM=i_dragon_spawn
         LINK.ACT.P=<LINK.P>
         REMOVE
      ENDIF
   ENDIF
   RETURN 1
ON=@Pickup_Ground
   MORE=1
   IF (<TIMER><1)
      TIMER=7200
   ENDIF
   LINK=<SRC.UID>
   RETURN 0
ON=@Pickup_Pack
   IF (<MORE>==1)
      TRIGGER=@DClick
      RETURN 0
   ENDIF
   MORE=1
   IF (<TIMER><1)
      TIMER=7200
   ENDIF
   LINK=<SRC.UID>
