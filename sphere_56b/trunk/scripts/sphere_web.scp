VERSION=0.54

[WEBPAGE w_login]
WEBPAGESRC=scripts/web/spherelogin.htm

ON=1
	src.login <ARGTXT1> <ARGTXT2>
	if ! <src.account.>
		webpage spherelogfail.htm
	elif <src.account.plevel> >= 5
		webpage sphereconfig.htm
	else
		webpage sphereaccount.htm
	endif
	return 1

