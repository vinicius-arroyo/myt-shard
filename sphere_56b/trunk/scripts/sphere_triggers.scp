[TYPEDEF T_GATE_WEREWOLF]
ON=@DClick
	//I would add more checks in here
	if (<TIMER> > 0)
		//stop people from using last object to remorph
		SRC.ACT.message "You must have it in your pack to use it."
		return 1
	else
		ATTR=attr_invis|attr_move_never|attr_decay
		MORE1=<SRC.BODY>
		TIMER=300
		LINK=<SRC.SERIAL>
		P=<SRC.P>
		LOCAL.DEX1=<SRC.DEX>
		LOCAL.INT1=<SRC.INT>
		LOCAL.STR1=<SRC.STR>
